@using IK_Project.UI.Models;

@{
    ViewData["Title"] = "UpdatePassword";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../assets/css/style.css">
    <link rel="shortcut icon" href="../../assets/images/favicon.png" />
</head>
@model UpdatePasswordViewModel
@if (ViewBag.State == null)
{
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <div class="row g-0">
                    <div class="card-body p-md-5 mx-md-4">
                        <div class="text-center">
                            <img src="~/images/solusan.png"
                             style="width: 300px;" alt="logo">
                            <h4 class="mt-1 mb-5 pb-1"></h4>
                        </div>

                        <form asp-action="UpdatePassword" method="post">


    <!-- New Password input -->
    <div class="form-outline mb-4">
        <label style="font-size:16px;" for="NewPassword">New Password</label>
        <input style="font-size:16px;" asp-for="NewPassword" id="NewPassword" type="password" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <!-- Confirm Password input -->
    <div class="form-outline mb-4">
        <label style="font-size:16px;" for="ConfirmPassword">Confirm Password</label>
        <input style="font-size:16px;" asp-for="ConfirmPassword" id="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

                            <div class="text-center pt-1 mb-5 pb-1">
                                <button type="submit" class="btn btn-block btn-primary">Change Password</button>

                            </div>

                        </form>

                    </div>
                </div>


            </div>
        </div>
    </div>
}

else
{
    if (ViewBag.State)
    {
        <div class="alert-success" style="font-size:large">The password has been successfully updated.</div>
        <br />
        <br />
        <br />
        <div>
            <a class="btn btn-primary" style="font-size:large" asp-action="Login" asp-controller="Home">Please login with your new password</a>
        </div>
    }
    else
    {
        <div class="alert-success">Sorry, password update failed.</div>
    }
}
