@using IK_Project.UI.Areas.DepartmantManager.Models.DepartmantManagerAdvanceVM;

@{
    TempData["Title"] = "GetAdvanceDM";
}

@model List<DepartmantManagerAdvanceListVM>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../assets/css/style.css">
    <link rel="shortcut icon" href="../../assets/images/favicon.png" />
</head>
<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-primary" style="color:azure; font-size:larger" asp-action="Add">Create new advance demand</a>
    </div>

</div>

<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>

                    <th>Advance Type</th>
                    <th>Amount</th>
                    <th>Currency Unit</th>
                    <th>Confirmation Status</th>
                   @* <th>Date of Reply</th>*@
                    <th>Detail</th>
                    <th>Delete</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.AdvanceType">@item.AdvanceType</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Amount">@item.Amount</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.CurrencyUnit">@item.CurrencyUnit</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.ConfirmationStatus">@item.ConfirmationStatus</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        @*   @if (item.DateOfReply != null)
                        {
                            <td>
                                <p class="fw-normal mb-1" asp-for="@item.DateOfReply">@item.DateOfReply.Value.ToShortDateString()</p>
                            </td>
                        }
                                   @if (item.Description != null)
                    {
                    <td>
                    <p class="fw-normal mb-1" asp-for="@item.Description">@item.Description</p>
                    </td>
                    }
                    else
                    {
                    <td>
                    <p class="fw-normal mb-1">Açıklama</p>
                    </td>
                    } *@
                        <td>
                            <a asp-action="Update" asp-area="DepartmantManager" asp-controller="Advance" asp-route-id="@item.Id" type="button" class="btn btn-success">
                                Update
                            </a>
                        </td>
                        <td>
                            <a asp-action="Remove" asp-area="DepartmantManager" asp-controller="Advance" asp-route-id="@item.Id" onclick="return showDataAlert()" type="button" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

