@using IK_Project.UI.Areas.Admin.Models.ViewModels.CompanyManagerVMs;

@{
    ViewData["Title"] = "GetAllCompanyManagers";
}

@model List<AdminCompanyManagerListVM>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../assets/css/style.css">
    <link rel="shortcut icon" href="../../assets/images/favicon.png" />
</head>
<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-primary" style="color:azure; font-size:larger" asp-action="Create">Add New CompanyManager</a>
    </div>

</div>

<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Name</th>
                    <th>Last Name</th>
                       <th>Profile Photo</th>
                    <th>Company Name</th>
    
                    <th>Email</th>
                    <th>PhoneNumber</th>
                    <th>Address</th>
@*                    <th>Status</th>
*@                    <th>Detail</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                       @* <td>
                            <p class="fw-normal mb-1" asp-for="@item.Id">@item.Id</p>
                            <p class="text-muted mb-0"></p>
                        </td>*@
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Name">@item.Name</p>
                            <p class="text-muted mb-0"></p>
                        </td>
@*                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.SecondName">@item.SecondName</p>
                        </td>*@

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.LastName">@item.LastName</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            @if (item.ProfilePhoto != null)
                            {
                                <img class="company-logo fw-normal mb-1" src="~/images/@item.ProfilePhoto" asp-for="@item.ProfilePhoto">

                            }
                            else
                            {
                                <img class="company-logo fw-normal mb-1" src="~/images/myLogo.jpg" asp-for="@item.ProfilePhoto ">
                            }
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.CompanyName">@item.CompanyName</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Email">@item.Email</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.PhoneNumber">@item.PhoneNumber</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Address">@item.Address</p>
                            <p class="text-muted mb-0"></p>
                        </td>

             @*            <td>
                            <p class="fw-normal mb-1" asp-for="@item.CompanyID">@item.CompanyID</p>
                            <p class="text-muted mb-0"></p>
                        </td>*@

         @*               <td>
                            <p class="fw-normal mb-1" asp-for="@item.Status">@item.Status</p>
                        </td>*@

                        <td>
                            <a asp-action="Details" asp-area="Admin" asp-controller="CompanyManager" asp-route-id="@item.Id" type="button" class="btn btn-info">
                                Detail
                            </a>
                        </td>

                        <td>
                            <a class="btn btn-danger" asp-controller="CompanyManager" asp-action="Delete" asp-area="Admin" asp-route-id="@item.Id" onclick="return showDataAlert()">
                                Delete
                            </a>
                        </td>



                    </tr>
                }


            </tbody>
        </table>

    </div>
    <style>
        /* Logo boyutunu ayarla */
        .company-logo {
            max-width: 50px; /* İstediğiniz genişliği burada belirtin */
            max-height: 50px; /* İstediğiniz yüksekliği burada belirtin */
        }
    </style>
</div>

