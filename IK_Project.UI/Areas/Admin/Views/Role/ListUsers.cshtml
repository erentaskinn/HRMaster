@using IK_Project.UI.Areas.Admin.Models.ViewModels.UserVMs;

@{
    ViewData["Title"] = "ListUsers";
}

@model List<UserListsVM>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../assets/css/style.css">
    <link rel="shortcut icon" href="../../assets/images/favicon.png" />
</head>

<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>User ID</th>
                    <th>User Name</th>
                    <th>Role Assign</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Id">@item.Id</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.UserName">@item.UserName</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        @*                        <td>
                    <p class="fw-normal mb-1" asp-for="@item.Email">@item.Email</p>
                    </td>*@


                        <td>
                            <a asp-action="RoleAssign" asp-area="Admin" asp-controller="Role" asp-route-id="@item.Id" type="button" class="btn btn-primary">
                                Role Assign
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

