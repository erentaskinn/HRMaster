@using IK_Project.UI.Models;
@{
    TempData["Title"] = "GetAllUserInformation";
}

@model List<AppUserInformationListVM>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../assets/css/style.css">
    <link rel="shortcut icon" href="../../assets/images/favicon.png" />
</head>

<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th> Name</th>
                    <th>Last Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Your Message</th>
                    @* <th>Date of Reply</th>*@
                    <th>Uncontacted List</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Name">@item.Name</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.LastName">@item.LastName</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.PhoneNumber">@item.PhoneNumber</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Email">@item.Email</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.YourMessage">@item.YourMessage</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                       

                        @* @if (item.DateOfReply != null)
                    {
                    <td>
                    <p class="fw-normal mb-1" asp-for="@item.DateOfReply">@item.DateOfReply.Value.ToShortDateString()</p>
                    </td>
                    }
                    @if (item.Description != null)
                    {
                    <td>
                    <p class="fw-normal mb-1" asp-for="@item.Description">@item.Description</p>
                    </td>
                    }
                    else
                    {
                    <td>
                    <p class="fw-normal mb-1">Açıklama</p>
                    </td>
                    } *@
                        <td>
                            <a asp-action="Aprove" asp-area="Admin" asp-controller="UserInformation" asp-route-id="@item.Id" type="button" class="btn btn-success">
                                Contacted
                            </a>
                        </td>
 
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


