@using IK_Project.UI.Areas.CompanyManager.Models.PermissionVM;

@{
    ViewData["Title"] = "CheckPermissionDemands";
}

@model List<CompanyManagerPermissionListVM>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../assets/css/style.css">
    <link rel="shortcut icon" href="../../assets/images/favicon.png" />
</head>

<br />
<br />
<br />
@if (Model != null && Model.Count() > 0)
{
<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Name</th>
                    <th>Permission Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Number Of Days</th>
                    <th>Confirmation Status</th>
                    <th>Detail</th>
                    <th>Delete</th>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.EmployeeName">@item.EmployeeName</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.PermissionType">@item.PermissionType</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.StartDate">@item.StartDate.ToShortDateString()</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.EndDate">@item.EndDate.ToShortDateString()</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.NumberOfDays">@item.NumberOfDays</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.ConfirmationStatus">@item.ConfirmationStatus</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                            @if (item.DateOfReply != null)
                            {
                            <td>
                                <p class="fw-normal mb-1" asp-for="@item.DateOfReply">@item.DateOfReply.Value.ToShortDateString()</p>
                            </td>
                            }
                            @if (item.ReasonOfRejection != null)
                            {
                            <td>
                                <p class="fw-normal mb-1" asp-for="@item.ReasonOfRejection">@item.ReasonOfRejection</p>
                            </td>
                            }
                        <td>
                            <a asp-action="Aprove" asp-area="CompanyManager" asp-controller="Permission" asp-route-id="@item.Id" type="button" class="btn btn-success">
                                Confirm
                            </a>
                        </td>
                        <td>
                            <a asp-action="Reject" asp-area="CompanyManager" asp-controller="Permission" asp-route-id="@item.Id" type="button" class="btn btn-danger">
                                Reject
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
}
else
{
<h3 style="color: red; font-weight: bold;">There is no permission</h3>
}
<style>
    /* Logo boyutunu ayarla */
    .company-logo {
        max-width: 50px; /* İstediğiniz genişliği burada belirtin */
        max-height: 50px; /* İstediğiniz yüksekliği burada belirtin */
    }
</style>

